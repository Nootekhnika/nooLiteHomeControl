<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/card_view_open_close_sensor"
        android:layout_width="@dimen/card_view_dimensions"
        android:layout_height="@dimen/card_view_dimensions"
        android:background="@drawable/card_view_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_view_open_close_sensor_state"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_closed_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:id="@+id/card_view_open_close_sensor_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Комната"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_view_open_close_sensor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Устройство"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/card_view_open_close_sensor_battery_low_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_warning" />

        <TextView
            android:id="@+id/card_view_open_close_sensor_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="marquee"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:singleLine="true"
            android:text="[RX00]"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black_light"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/card_view_open_close_sensor_update_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:theme="@style/NooLiteProgressBarDark"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
