<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_automation_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_list_background"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">

    <TextView
        android:id="@+id/card_view_automation_info_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Данная автоматика может управлять устройствами nooLite (без обратной связи) только в рамках сценария."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black_light"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/card_view_automation_info_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_automation_info_text_1"
        android:layout_marginTop="@dimen/dp_4"
        android:text="Для автоматизации устройств(а) без обратной связи создайте сценарий с ним(и), затем добавьте этот сценарий в соответствующую автоматику. Или используйте ранее созданный сценарий из списка выше."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black_light"
        android:textStyle="normal" />

    <Button
        android:id="@+id/card_view_automation_info_create_preset_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@id/card_view_automation_info_text_1"
        android:background="@drawable/button_dark"
        android:gravity="center"
        android:text="Создать сценарий"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black_light"
        android:textStyle="normal"
        android:visibility="gone" />

</RelativeLayout>
