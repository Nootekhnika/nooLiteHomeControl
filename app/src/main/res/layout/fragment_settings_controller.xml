<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black_light">

        <Button
            android:id="@+id/fragment_settings_controller_button_back"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/button_light"
            android:drawableLeft="@drawable/ic_arrow_left"
            android:paddingLeft="@dimen/dp_11"
            android:text="Назад"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_104"
            android:layout_toRightOf="@id/fragment_settings_controller_button_back"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="Настройки"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="normal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_settings_controller_layout_prf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/grey"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контроллер nooLite PRF-64"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_10">

            <Button
                android:id="@+id/fragment_settings_controller_button_ip_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="IP адрес"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fragment_settings_controller_button_authorization"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="Авторизация"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fragment_settings_controller_button_date_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="Дата и время"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fragment_settings_controller_button_backup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="Резервирование настроек"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fragment_settings_controller_button_clear_app_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="Очистка кэша приложения"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fragment_settings_controller_button_clear_log"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="Удаление лога контроллера"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />

            <Button
                android:id="@+id/fragment_settings_controller_button_app_log"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="Application log"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal"
                android:visibility="gone" />

            <Button
                android:id="@+id/fragment_settings_controller_button_about_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/button_dark"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_13"
                android:text="О приложении"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black_light"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
