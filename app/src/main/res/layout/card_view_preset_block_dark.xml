<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_view_preset_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/card_view_preset_top_button"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/card_view_background_dark">

            <TextView
                android:id="@+id/card_view_preset_top_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:singleLine="true"
                android:text="Сценарий 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_view_preset_top_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:ellipsize="marquee"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_4"
                android:singleLine="true"
                android:text="[00]"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_view_preset_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/card_view_preset_bottom_button"
            android:layout_width="@dimen/dp_152"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/card_view_background_dark"
            android:visibility="invisible">

            <TextView
                android:id="@+id/card_view_preset_bottom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:singleLine="true"
                android:text="Сценарий 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/card_view_preset_bottom_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:ellipsize="marquee"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_4"
                android:singleLine="true"
                android:text="[01]"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
