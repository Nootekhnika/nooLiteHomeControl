<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">

        <LinearLayout
            android:id="@+id/fragment_manual_rooms_button"
            android:layout_width="@dimen/dp_56"
            android:layout_height="match_parent"
            android:background="@color/shadow_50"
            android:orientation="horizontal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/fragment_manual_title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_marginRight="@dimen/dp_56"
            android:background="@color/shadow_50"
            android:orientation="horizontal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/fragment_manual_menu_button"
            android:layout_width="@dimen/dp_56"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/shadow_50"
            android:orientation="horizontal"
            android:visibility="visible" />

        <Button
            android:id="@+id/fragment_manual_button_cancel_top"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/button_light"
            android:text="Завершить"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:visibility="invisible" />

        <Button
            android:id="@+id/fragment_manual_button_next_top"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/button_light"
            android:drawableRight="@drawable/ic_arrow_right_light"
            android:paddingRight="@dimen/dp_13"
            android:text="Далее"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_56"
        android:background="@color/shadow_50">

        <ImageView
            android:id="@+id/fragment_manual_rooms_arrow"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_56"
            android:src="@mipmap/ic_arrow_top_left"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/fragment_manual_title_arrow"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_arrow_top"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/fragment_manual_menu_arrow"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_56"
            android:src="@mipmap/ic_arrow_top_right"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_56">

            <TextView
                android:id="@+id/fragment_manual_rooms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_112"
                android:text="about_rooms"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_manual_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:text="about_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_manual_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_112"
                android:text="about_menu"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_manual_text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="about_app"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_manual_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="about_room"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_56">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:gravity="bottom|left">

                    <TextView
                        android:id="@+id/fragment_manual_home_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="about_home"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:gravity="bottom|right">

                    <TextView
                        android:id="@+id/fragment_manual_timers_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="about_timers"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/fragment_manual_home_arrow"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:src="@mipmap/ic_arrow_bottom_left"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fragment_manual_room_arrow"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/ic_arrow_bottom"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left">

                <ImageView
                    android:id="@+id/fragment_manual_timers_arrow"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/ic_arrow_bottom_right"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_manual_home_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/shadow_50"
                android:orientation="horizontal"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/fragment_manual_room_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/shadow_50"
                android:orientation="horizontal"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/fragment_manual_timers_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/shadow_50"
                android:orientation="horizontal"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/fragment_manual_button_cancel_bottom"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/button_light"
            android:text="Завершить"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:visibility="invisible" />

        <Button
            android:id="@+id/fragment_manual_button_next_bottom"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/button_light"
            android:drawableRight="@drawable/ic_arrow_right_light"
            android:paddingRight="@dimen/dp_13"
            android:text="Далее"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>
