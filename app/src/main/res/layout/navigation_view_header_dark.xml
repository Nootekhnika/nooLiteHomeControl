<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_96"
    android:background="@color/black_light">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/header_progress_bar"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="12dp"
            android:theme="@style/NooLiteProgressBarLight"
            android:visibility="gone" />

        <TextView
            android:id="@+id/home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/home_ip"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toLeftOf="@id/home_settings"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Дом"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/grey"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/home_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_toLeftOf="@id/home_settings"
            android:background="@drawable/layout_transparent_clickable"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:singleLine="true"
            android:text="IP-адрес"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/home_settings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_round_background_dark"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_settings_grey" />

    </RelativeLayout>
</FrameLayout>
