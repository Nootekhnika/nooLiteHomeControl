<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_50"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/fragment_gui_block_progress_bar"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:theme="@style/NooLiteProgressBarLight" />

        <Button
            android:id="@+id/fragment_gui_block_button_cancel"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:background="@drawable/button_light_pressed"
            android:text="Отмена"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
