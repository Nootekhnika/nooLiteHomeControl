<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlHighlight">@color/black_light</item>
    </style>

    <style name="NooLiteProgressBarDark" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black_light</item>
    </style>

    <style name="NooLiteProgressBarLight" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="NooLiteSwitchCompatStyle" parent="Theme.AppCompat">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <style name="NooLiteRadioButtonStyle" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlNormal">@color/grey</item>
    </style>

    <style name="NooLiteCheckBoxStyle" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlNormal">@color/grey</item>
    </style>

    <style name="PopupMenuDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/grey</item>
        <item name="android:itemBackground">@drawable/popup_menu_item_background_dark</item>
        <item name="colorControlActivated">@color/grey</item>
    </style>
</resources>
